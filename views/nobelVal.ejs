<body><%- include("./partials/menu") %>
  <div class="cointainer">
    <div class="row">
      <div class="col-12 card text-white  mb-3 "style="background-color: #f5f5f5" >
        <div class="row no-gutters">
          <div class="col-md-4"><img src="<%= data.countryInfo.flag %>" class="card-img" ></div><div class="col-md-8">
            <div class="card-body">
              <h2 class="card-title text-center"><%= data.country %></h2>
              <p class="card-text text-center bg-danger text-white" > Casos: <%= data.cases %></p>
              <p class="card-text text-center bg-dark text-white"> Fallecidos: <%= data.deaths %> </p>
              <p class="card-text text-center bg-success text-white"> Recuperados: <%= data.recovered %> </p>
              <a class="text-center  text-white" href="/nobel" >Regresar</a> 
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

